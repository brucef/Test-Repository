package com.ilm.game.engine.objects{	import com.ilm.utils.display.Draw;		public class Ball extends GameObject	{		public var radius:Number;		public function Ball(color:uint,diameter:Number,accel:Number,friction:Number,maxSpeed:Number,mass:Number,border:Boolean=false,weapon:Object=null):void		{			super(accel, friction, maxSpeed, mass, weapon);			this.radius = diameter / 2;			drawCircle(color, this.radius, border);		}		private function drawCircle(color:uint, radius:Number, border:Boolean):void		{			var _draw:Draw = new Draw;			_draw.Circle(this, 0, 0, radius, color, 1, border);		}	}}