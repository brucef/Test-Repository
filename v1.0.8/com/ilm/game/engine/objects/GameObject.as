package com.ilm.game.engine.objects{	import flash.display.Sprite;		public class GameObject extends Sprite	{		public var accel:Number;		public var friction:Number;		public var maxSpeed:Number;		public var mass:Number;		public var weapon:Object;				public var dirX:Number = 0;		public var dirY:Number = 0;		public var velX:Number = 0;		public var velY:Number = 0;		public function GameObject(accel:Number, friction:Number, maxSpeed:Number, mass:Number, weapon:Object = null):void		{			this.accel = accel;			this.friction = friction;			this.maxSpeed = maxSpeed;			this.mass = mass;			this.weapon = weapon;		}	}}