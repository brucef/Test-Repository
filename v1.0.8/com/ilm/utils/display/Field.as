package com.ilm.utils.display{	import flash.text.TextField;	import flash.text.TextFormat;		public class Field extends TextField	{		public function define(fText:String, xPos:Number, yPos:Number, font:String = "Arial", size:Number = 12, tColor:uint = 0x000000,align:String = "left" , border:Boolean = false, tSelectable:Boolean = false, fType:String = "dynamic", fRestrict:String = null, maxC:int = 0):void		{			var format:TextFormat = new TextFormat();			format.align = align;			format.size = size;			format.font = font;			this.defaultTextFormat = format;			this.text = fText;			//this.height = fHeight;			//this.width = fWidth;			this.selectable = tSelectable;			this.border = border;			this.type = fType;			this.x = xPos;			this.y = yPos;			this.restrict = fRestrict;			this.maxChars = maxC;		}	}}