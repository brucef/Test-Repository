package com.ilm.utils.display{	import flash.display.Sprite;	import flash.display.Shape;	import flash.text.TextFormat;	import flash.text.TextField;	public class Draw extends Sprite	{		public function Rectange(rParent:Object, xPos:Number, yPos:Number, rWidth:Number, rHeight:Number, fColor:uint, fAlpha:Number = 1, border:Boolean = false, bThickness:Number = 1, bColor:uint = 0x000000, bAlpha:Number = 1):void		{			var rect:Shape = new Shape  ;			if (border) {				rect.graphics.lineStyle(bThickness, bColor, bAlpha);			}			rect.graphics.beginFill(fColor, fAlpha);			rect.graphics.drawRect(xPos, yPos, rWidth, rHeight);			rect.graphics.endFill();			rParent.addChild(rect);		}		public function Circle(cParent:Object, xPos:Number, yPos:Number, radius:Number, fColor:uint, fAlpha:Number = 1, border:Boolean = false, bThickness:Number = 1, bColor:uint = 0x000000, bAlpha:Number = 1):void		{			var circ:Shape = new Shape  ;			if (border) {				circ.graphics.lineStyle(bThickness, bColor, bAlpha);			}			circ.graphics.beginFill(fColor, fAlpha);			circ.graphics.drawCircle(xPos, yPos, radius);			circ.graphics.endFill();			cParent.addChild(circ);		}	}}