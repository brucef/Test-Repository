package com.ilm.utils.interactions{	import flash.display.Sprite;	import flash.display.Stage;	import flash.events.KeyboardEvent;		public class KeyObject extends Sprite	{		private var keys:Object = new Object();		public function KeyObject(stage:Stage)		{			stage.addEventListener(KeyboardEvent.KEY_DOWN, keyDownHandler);			stage.addEventListener(KeyboardEvent.KEY_UP, keyUpHandler);		}		public function isDown(keyCode:uint):Boolean		{			var toReturn:Boolean = false;			if (keys[keyCode.toString()]) {				toReturn = true;			}			return toReturn;		}		private function keyDownHandler(event:KeyboardEvent):void		{			keys[event.keyCode.toString()] = true;		}		private function keyUpHandler(event:KeyboardEvent):void		{			keys[event.keyCode.toString()] = false;		}	}}