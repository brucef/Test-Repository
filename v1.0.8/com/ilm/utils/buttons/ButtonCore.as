package com.ilm.utils.buttons{	import flash.display.Sprite;	import flash.events.MouseEvent;	import com.ilm.utils.display.Draw;	import caurina.transitions.Tweener;	import flash.events.Event;	public class ButtonCore extends Sprite	{		public var type:String = "lightDark";		public static const LIGHT_DARK:String = "lightDark";		private var whiteBox:Sprite = new Sprite  ;		private var blackBox:Sprite = new Sprite  ;		public function ButtonCore(type:String, func:Function)		{			this.buttonMode = true;			this.type = type;			this.addEventListener(MouseEvent.ROLL_OVER, over);			this.addEventListener(MouseEvent.ROLL_OUT, out);			this.addEventListener(MouseEvent.MOUSE_DOWN, down);			this.addEventListener(MouseEvent.CLICK, func);			this.addEventListener(Event.ADDED_TO_STAGE, init);		}		private function init(event:Event):void		{			var _draw:Draw = new Draw();			_draw.Rectange(whiteBox,0,0,this.width,this.height,0xFFFFFF);			whiteBox.alpha = 0;			this.addChild(whiteBox);			_draw.Rectange(blackBox,0,0,this.width,this.height,0x000000);			blackBox.alpha = 0;			this.addChild(blackBox);		}		public function over(event:MouseEvent):void		{			// on over			switch (type) {				case "lightDark" :					overLD();					break;			}		}		public function out(event:MouseEvent):void		{			// on out			switch (type) {				case "lightDark" :					outLS();					break;			}		}		public function down(event:MouseEvent):void		{			// on down			switch (type) {				case "lightDark" :					downLD();					break;			}		}		private function overLD():void		{			whiteBox.alpha = 0.15;			blackBox.alpha = 0;		}		private function outLS():void		{			whiteBox.alpha = 0;			blackBox.alpha = 0;		}		private function downLD():void		{			whiteBox.alpha = 0;			blackBox.alpha = 0.15;		}	}}