package com.ilm.menu.engine{	import flash.display.Sprite;	import flash.events.Event;	import caurina.transitions.Tweener;	public class BaseMenu extends Sprite	{		public function BaseMenu():void		{			this.addEventListener(Event.ADDED_TO_STAGE, init);		}		private function init(event:Event):void		{			this.y = stage.stageHeight * -1;			this.alpha = 0;		}		public function openMe(me:BaseMenu = null):void		{			if (me) {				Tweener.addTween(this, {y:0, alpha:1, time:1, transition:"easeInSine"});			} else {				trace("'open me' called and is null");			}		}		public function closeMe(me:BaseMenu = null):void		{			if (me) {				Tweener.addTween(this, {y:stage.stageHeight, alpha:0, time:1.5, transition:"easeOutSine", onComplete:closeComplete});			} else {				trace("'close me' called and is null");			}		}		private function closeComplete():void		{			this.dispatchEvent(new MenuEvent(MenuEvent.MENU_CLOSED));		}	}}