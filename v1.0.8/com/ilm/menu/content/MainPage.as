package com.ilm.menu.content{	import flash.events.Event;	import com.ilm.menu.engine.BaseMenu;	import com.ilm.utils.display.*;	import com.ilm.utils.buttons.ButtonCore;	import com.ilm.menu.Menu;	import com.ilm.menu.engine.MenuEvent;		public class MainPage extends BaseMenu	{		private var menuClass:Menu;				public function MainPage(passedClass:Menu):void		{			menuClass = passedClass;			this.addEventListener(Event.ADDED_TO_STAGE, init);		}		private function init(event:Event):void		{			var _draw:Draw = new Draw();			_draw.Rectange(this,0,0,stage.stageWidth,stage.stageHeight,0x00FF99);			var _text:Field = new Field();			_text.define("Main Page",50,50,"Myriad Pro");			this.addChild(_text);			this.openMe(this);			makeButtons();		}		private function makeButtons():void		{			var _draw:Draw = new Draw();			var _credits:ButtonCore = new ButtonCore(ButtonCore.LIGHT_DARK, toCredits);			_draw.Rectange(_credits,0,0,100,20,0x6699FF)			_credits.x = 200;			_credits.y = 150;			this.addChild(_credits);						var _play:ButtonCore = new ButtonCore(ButtonCore.LIGHT_DARK, playGame);			_draw.Rectange(_play,0,0,100,20,0xFF3333)			_play.x = 200;			_play.y = 200;			this.addChild(_play);		}		private function playGame(event:Event):void		{			trace("play clicked");			this.addEventListener(MenuEvent.MENU_CLOSED, menuClass.callPlayGame);			this.closeMe(this);		}		private function toCredits(event:Event):void		{			trace("credits clicked");			menuClass.openCreditsPage();			this.closeMe(this);		}	}}