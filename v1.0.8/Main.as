package{	import flash.display.Sprite;	import com.ilm.menu.Menu;	import com.ilm.game.GameClient;	public class Main extends Sprite	{		private var _menu:Menu;		private var _game:GameClient;		public function Main()		{			//openMenu("MainPage");			//normaly the menu would be opened first, i changed this for testing			openGame();			//this.addChild(new Stats);		}		public function openMenu(page:String):void		{			_menu = new Menu(this,page);			_game = removeClip(_game);			this.addChild(_menu);		}		public function openGame():void		{			_game = new GameClient(this);			_menu = removeClip(_menu);			this.addChild(_game);		}		private function removeClip(clip:*)		{			if (clip) {				this.removeChild(clip);			}			return null;		}	}}